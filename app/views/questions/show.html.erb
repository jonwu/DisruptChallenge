<%= render 'layouts/rfis/content' %>
<%= javascript_include_tag 'questions' %>  

<div id="question-content">
	<div class="row">

		<div class="col-sm-12">
			<div>
				<h2 data-id="<%= @current_question.id%>" class="header_question_title"><%= best_in_place @current_question, :text %></h2>
				<br/>
				<%= link_to "", question_path(id: @current_question.id), method: :delete, class: "glyphicon glyphicon-remove add" %>
			</div>
		</div>

		<div class="col-sm-8">
			<div class="panel panel-default panel-info" style="margin-top: 15px">
				
				<div class="panel-heading">
					<h3 class="panel-title"><%= @current_rfi.collaborators.first.user.name %></h3>
				</div>
				<div class="panel-body">
					<div class="container-fluid">
						<% if !@current_rfi.collaborators.first.user.responses.find_by(question_id: @current_question.id).nil? %>
							<%= @current_rfi.collaborators.first.user.responses.find_by(question_id: @current_question.id).text %>
						<% end %>
					</div>
				</div>
			</div>
		</div>
		<div class="col-sm-4">
			<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true" style="margin-top: 15px">
				
				<% @current_rfi.collaborators.each do |collaborator| %>

				<div class="panel panel-default">
					<div class="panel-heading" role="tab" id="heading<%= collaborator.id %>">
						<h4 class="panel-title">
							<a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= collaborator.id %>" aria-expanded="true" aria-controls="collapse<%= collaborator.id %>"><%= collaborator.user.name %></a>
						</h4>
					</div>
					<div id="collapse<%= collaborator.id %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading<%= collaborator.id %>">
						<div class="panel-body">
							<% if !collaborator.user.responses.find_by(question_id: @current_question.id).nil? %>
							<%= collaborator.user.responses.find_by(question_id: @current_question.id).text %>
							<% end %>
						</div>
					</div>
				</div>			

				<% end %>
				</div>
		</div>
	</div>
</div>

