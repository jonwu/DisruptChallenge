<div class="panel panel-default comments">
  <div class="panel-body">
    <ul class="media-list">
      <% if !@current_question.comments.any? %>
        
          <span> No comments yet..</span>
        
      <% end %>

      <% @current_question.comments.each do |comment| %>
      <li class="media content">
        

            <div class="media-body">
              <p>
                <b><%= comment.user.name %></b>
                <%= comment.text %></p>
              <span>
                <%= local_time(comment.created_at) %>
                <a href="">delete</a>
              </span>
              

            </div>
          
      </li>

      <% end %></ul>
  
  </div>
  <div class="panel-footer">
    <%= form_for :comment, url: {action: "comment"}, remote: true do |f|%>
    <%= f.text_field :text, class: "form-control question-form", placeholder: 'Write a comment...' %>
    <% end %>
  </div>
</div>