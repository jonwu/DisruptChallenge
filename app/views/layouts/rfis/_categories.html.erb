


<button type="button" class="btn btn-primary btn-lg add" data-toggle="modal" data-target="#categorySettings">
  Add
</button>
<% @current_rfi.categories.each do |category| %>
	 <% if @current_category != category %>
		<%= link_to category_questions_path(category_id: category.id), class: "list-group-item" do%>
			<span class="badge">14</span>
			<%= category.text %>
		<% end %>
	<% else %>
		<%= link_to category_questions_path(category_id: category.id), class: "list-group-item active" do%>
			<span class="badge">14</span>
			<%= category.text %>
		<% end %>
	<% end %>
<% end %>
	  
	
