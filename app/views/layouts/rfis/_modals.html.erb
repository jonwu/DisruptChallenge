<!-- Settings modal for rename -->
<div class="modal fade settings-rename" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <%= form_tag rfi_path(id: @current_rfi.id), method: :put do %>
        <%= text_field_tag(:rfi_title, @current_rfi.title, {:placeholder => "New Name...", :class=>"form-control input-lg", :id=>"category_title_input"}) %>
        <%= submit_tag("Submit") %>
      <% end %>
    </div>
  </div>
</div>