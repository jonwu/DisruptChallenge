


<% content_for :questions do %>
	<span class="list-group-item"><%= @current_category.text %>
		<%= link_to "", category_path(id: @current_category.id), method: :delete, class: "glyphicon glyphicon-remove add" %>
	</span>
	<%= link_to new_category_question_path(category_id: @current_category.id), class: "btn btn-primary btn-lg add" do%>
	  Add
	<% end %>
	
	<div class="list-group">

	<% if !@current_category.nil? %>
			<% @current_category.questions.each do |question| %>
				<a href="/questions/<%= question.id %>" class="list-group-item 
				<% if @current_question == question %> active <% end %> 
				<%= question.impact %>">

					<p class="impact"><%= question.impact %></p>
					<p><%= question.text %></p>
					<p class="n-responses"><i>no responses</i></p>
				
				</a>
				
			<% end %>
	<% end %>
	</div>
<% end %>

<%= render 'layouts/rfis/categories' %>

