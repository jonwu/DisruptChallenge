
<div class="list-group">
	<% if !@current_category.nil? %>
		<% @current_category.questions.each do |question| %>
			<% if @current_question != question %>
				<%= link_to question.text, update_question_path(question_id: question.id), class: "list-group-item", remote: true, method: :post %>
			<% else %>
				<%= link_to question.text, update_question_path(question_id: question.id), class: "list-group-item active", remote: true, method: :post %>
			<% end %>
		<% end %>
	<% end %>
</div>
