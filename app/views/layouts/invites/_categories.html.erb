<% @current_rfi.categories.each do |category| %>
	 <% if @current_category != category %>
		<%= link_to category.text, category_responses_path(category_id: category.id), class: "list-group-item category-pjax" %>
	<% else %>
		<%= link_to category.text, category_responses_path(category_id: category.id), class: "list-group-item active category-pjax" %>
	<% end %>
<% end %>