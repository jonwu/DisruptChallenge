<!DOCTYPE html>
<html>
	<head>
		<base href="/">
		<title>BridgeIT</title>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= csrf_meta_tags %>
		
	</head>
	<body>

		<%= render 'layouts/headers/primary' %>
		<div id="wrapper" >
			<!-- Sidebar -->
			<div id="sidebar" >
				<div id="menu" class="menu-pjax"><%= render 'layouts/sidebar/menu' %></div>
				<div id="categories" class="categories-pjax"><%= render 'layouts/sidebar/categories' %></div>
				<div id="questions" class="questions-pjax"><%= render 'layouts/sidebar/questions' %></div>
			</div>
			
			<!-- Page Content -->
			<div id="content-wrapper" class="container-fluid main-content main-content-pjax">
				<%= yield %>
				
			</div>
		</div>
	</body>

	
</html>