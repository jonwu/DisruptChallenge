<div class="content">
	<div class="category_title"><%= render partial: "category_title", object: @active_category %></div>
</div>

<% @active_category.questions.each do |q| %>
    <p>
      <h3><span class="label label-default"><%= q.text.html_safe %></span></h3>
      <%= link_to delete_question_path(question_id: q.id, category_id: @active_category.id), remote: true do %>
        <p>X</p>
      <% end %>
    </p>
<% end %>

<div class="panel panel-danger question-panel">
	<div class="panel-heading">
    	<h3 class="panel-title">Panel title</h3>
  	</div>
    <div class="panel-body">
        <textarea class="question-form form-control" rows="2" placeholder="Ask a question"></textarea>
     
    </div>
    <div class="panel-footer">
    	<%= button_to "Add Question", check_question_path(category: @active_category.id), remote: true, :class => 'btn btn-primary btn-lg' %>
    </div>			
</div>
