<div class="panel panel-danger question-panel">
    <div class="panel-heading">
        <h3 class="panel-title">Panel title</h3>
    </div>
    <div class="panel-body">
        <textarea class="question-form form-control" rows="2" placeholder="Ask a question"></textarea>

    </div>
    
    <div class="panel-footer">     
        <button class="btn btn-primary btn-lg add-question">Add Question</button>
    </div>
</div>
 
<% if @active_category == nil %>
    <script>
        jQuery(document).ready(function($) {
            $(".question-panel").hide() 
        });
    </script>
<% end %>