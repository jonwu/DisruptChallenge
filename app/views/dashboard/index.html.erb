
<body>

    <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav ">

                <ul class="nav nav-pills nav-stacked" role="tablist">
                
                        
                    <li class="active" role="presentation">
                        <%= link_to dashboard_path, remote: true do%>
                            <h3>Dashboard</h3>
                        <% end %>        
                    </li>
                    
                    
                    <div class="rfi-list">
                        <%= render partial: "your_rfis", object: [@rfis, @current_rfi] %> 
                    </div>
                    
                    <div class="shared-rfi-list">
                        <%= render partial: "shared_rfis", object: @shared_rfis %> 
                    </div>
	            </ul>
            </ul>
        </div>


        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper" class="dashboard">
            <div class="menu-wrapper">
                <div class="menu">
                    <div class="menu-option-wrapper">
                        <%= render partial: "menu_options", object: @current_rfi %> 
                    </div>
                    
                </div>
                <div class="offset">
                    
                </div>
            </div>

            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-11">
                        <div class="content">
                            <%= render partial: "content", object: @current_rfi %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
</body>
