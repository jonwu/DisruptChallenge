renderRfiList()
renderContent()
renderMenuOptions()
animateMenu()
/**
 * Render the rfi list
 * @return {void} 
 */
function renderRfiList(){
	<% if @rfis != nil %>
		$('div.rfi-list').html("<%= j (render partial: 'your_rfis', object: [@rfis, @current_rfi]) %>")
	<% end %>
}

/**
 * Render content of chosen RFI
 * @return {void} 
 */
function renderContent(){
	$('div.content').html("<%= j (render partial: 'content', object: @current_rfi) %>")
}

function renderSharedRfiList(){
	<% if @shared_rfis != nil %>
		$('div.rfi-list').html("<%= j (render partial: 'your_rfis', object: @shared_rfis) %>")
	<% end %>
}

/**
 * Render menu options
 * @return {void} 
 */
function renderMenuOptions(){
	$('div.menu-option-wrapper').html("<%= j (render partial: 'menu_options', object: @current_rfi) %>")
}

/**
 * Animate menu when switching between dashboard and rifs
 * @return {void} 
 */
function animateMenu(){
	<% if !@current_rfi.nil? %>
		$(".menu-wrapper").animate({"height": 100}, 500)
	<% else %>
		$(".menu-wrapper").animate({"height": 250}, 500)
	<% end  %>
}