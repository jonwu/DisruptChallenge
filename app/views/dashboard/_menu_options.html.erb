<%= link_to create_rfi_path, method: :post do%>
    <div class="menu-option">
        <div class="content">
            <img src="assets/add_rfi.png" class="menu-button" alt="">
            <p>Create New</p>        
        </div>
    </div>
<% end %>

<% if @current_page == "dashboard"  %>
    <%= link_to create_rfi_path, method: :post do %>
        <div class="menu-option">
            <div class="content">   
                <img src="assets/inbox.png" class="menu-button" alt="">
